{
    "manifest_version": 3,
    "name": "Workduck Capture Extension",
    "version": "1.0",
    "description": "Capture information from webpages and generate something with OpenAI GPT-3",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html",
        "default_title": "Capture & Generate",
        "keyboard_shortcut": "Alt+Shift+C"
    },
    "commands": {
        "capture-info": {
            "suggested_key": {
                "default": "Alt+Shift+C"
            },
            "description": "Capture information from webpage"
        }
    }
}
